<div class="col-xs-12">
<div class="col-xs-offset-2 col-xs-8 irudia">
    <div class="col-xs-offset-2 col-xs-8">
        <h4><%= link_to image.title, '/images/'+image.id.to_s, style: 'font-size: 16pt; font-weight: bold'  %></h4>
    </div>
    <div class="col-xs-12">
        <%= link_to image_tag(image.img.url, style: 'max-height:500;width:auto;'), '/images/'+image.id.to_s %>
    </div>
    <div class="col-xs-offset-2 col-xs-8">
        <%= VoteImgsController.gettotal(image.id) %> pts
         - <%= link_to image.user.nickname, '/users/'+image.user.id.to_s, style: 'font-size: 14pt; font-style: italic;' %>        
         - <span style="font-size:10pt"><%= image.created_at %></span>
        <% if (logged_in?) && (image.user.id == current_user.id || current_user.admin == 1) %>
			- <%= link_to image_tag("trash-can-symbol-icon-504.png", style: 'height:3%;width:3%'), '/images/'+image.id.to_s+'/destroy' %>
		<% end %>
    </div>
</div>
</div>
